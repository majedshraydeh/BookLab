             <FrameLayout
                 android:id="@+id/frameLayout"
                 android:layout_width="100dp"
                 android:layout_height="@dimen/space_100"
                 android:layout_marginStart="10dp"
                 android:layout_marginTop="@dimen/space_10"
                 android:layout_marginBottom="@dimen/space_10"
                 card_view:layout_constraintBottom_toBottomOf="parent"
                 card_view:layout_constraintStart_toStartOf="parent"
                 card_view:layout_constraintTop_toTopOf="parent">

                 <com.mikhaellopez.circularimageview.CircularImageView
                     imageLoading="@{user.image}"
                     loading="@{loading}"
                     android:layout_width="100dp"
                     android:layout_height="100dp"
                     card_view:civ_border_width="1dp"
                     card_view:civ_border_color="@color/grey_5"
                     card_view:civ_border="true"
                     />

                 <FrameLayout
                     android:id="@+id/loading"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center">

                     <include
                         android:id="@+id/load_image"
                         layout="@layout/loading" />

                 </FrameLayout>

             </FrameLayout>

             <TextView
                 android:id="@+id/name"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="10dp"
                 android:layout_marginTop="20dp"
                 android:fontFamily="@font/kufi_bold"
                 android:padding="2dp"
                 android:text="@{user.name}"
                 android:textColor="@color/black"
                 android:textSize="12sp"
                 card_view:layout_constraintStart_toEndOf="@+id/frameLayout"
                 card_view:layout_constraintTop_toTopOf="parent" />
         </androidx.constraintlayout.widget.ConstraintLayout>
       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="5dp"
           android:foreground="?android:attr/selectableItemBackground"
           card_view:cardBackgroundColor="@color/white"
           card_view:cardElevation="2dp"
           card_view:cardUseCompatPadding="true">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/space_15"
                   android:layout_marginStart="@dimen/space_5"
                   android:orientation="horizontal">

                   <ImageView
                       android:layout_width="@dimen/space_40"
                       android:layout_height="@dimen/space_40"
                       android:src="@drawable/info"
                       android:layout_gravity="center"
                       card_view:tint="@color/baseColor" />

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">

                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginStart="@dimen/space_5"
                           android:orientation="horizontal">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="@font/kufi_regular"
                               android:layout_gravity="center"
                               android:layout_marginStart="@dimen/space_10"
                               android:text="@string/permanence_type"
                               android:textSize="11sp"
                               />

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="@font/kufi_regular"
                               android:layout_gravity="center"
                               android:text="@{user.permanenceType.title}"
                               android:layout_marginStart="@dimen/space_10"
                               android:textSize="11sp"
                               />


                       </LinearLayout>

                       <LinearLayout
                           android:layout_marginStart="@dimen/space_5"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="@font/kufi_regular"
                               android:layout_gravity="center"
                               android:layout_marginStart="@dimen/space_10"
                               android:text="@string/gender"
                               android:textSize="11sp"
                               />

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="@font/kufi_regular"
                               android:layout_gravity="center"
                               android:text="@{user.gender.title}"
                               android:layout_marginStart="@dimen/space_10"
                               android:textSize="11sp"
                               />


                       </LinearLayout>

                       <LinearLayout
                           android:layout_marginStart="@dimen/space_5"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="@font/kufi_regular"
                               android:layout_gravity="center"
                               android:layout_marginStart="@dimen/space_10"
                               android:text="@string/desire_to_work"
                               android:textSize="11sp"
                               />

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="@font/kufi_regular"
                               android:layout_gravity="center"
                               android:text="@{user.desireToWork.title}"
                               android:layout_marginStart="@dimen/space_10"
                               android:textSize="11sp"
                               />


                       </LinearLayout>

                   </LinearLayout>






               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/space_15"
                   android:layout_marginStart="@dimen/space_5"
                   android:orientation="horizontal">

                   <ImageView
                       android:layout_width="@dimen/space_40"
                       android:layout_height="@dimen/space_40"
                       android:src="@drawable/call"
                       card_view:tint="@color/baseColor" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/kufi_regular"
                       android:layout_gravity="center"
                       android:layout_marginStart="@dimen/space_10"
                       android:text="@string/cell_phone"
                       android:textSize="11sp"
                       />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/kufi_regular"
                       android:layout_gravity="center"
                       android:text="@{user.phone}"
                       android:layout_marginStart="@dimen/space_10"
                       android:textSize="11sp"
                       />



               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/space_15"
                   android:layout_marginStart="@dimen/space_5"
                   android:orientation="horizontal">

                   <ImageView
                       android:layout_width="@dimen/space_40"
                       android:layout_height="@dimen/space_40"
                       android:src="@drawable/location"
                       card_view:tint="@color/baseColor" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/kufi_regular"
                       android:layout_gravity="center"
                       android:layout_marginStart="@dimen/space_10"
                       android:text="@string/place_of_residence"
                       android:textSize="11sp"
                       />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/kufi_regular"
                       android:layout_gravity="center"
                       android:text="@{user.state.title+user}"
                       android:layout_marginStart="@dimen/space_10"
                       android:textSize="11sp"
                       />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/kufi_regular"
                       android:layout_gravity="center"
                       android:text="@{user.district}"
                       android:layout_marginStart="3dp"
                       android:textSize="11sp"
                       />



               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/space_15"
                   android:layout_marginStart="@dimen/space_5"
                   android:orientation="horizontal">

                   <ImageView
                       android:layout_width="@dimen/space_40"
                       android:layout_height="@dimen/space_40"
                       android:src="@drawable/email"
                       card_view:tint="@color/baseColor" />

                   <TextView
                       android:id="@+id/email"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/kufi_regular"
                       android:layout_gravity="center"
                       android:text="@{user.email}"
                       android:layout_marginStart="@dimen/space_10"
                       android:textSize="11sp"
                       />




               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/space_15"
                   android:layout_marginStart="@dimen/space_5"
                   android:layout_marginBottom="@dimen/space_40"
                   android:orientation="horizontal">

                   <ImageView
                       android:layout_width="@dimen/space_40"
                       android:layout_height="@dimen/space_40"
                       android:src="@drawable/favorite"
                       card_view:tint="@color/baseColor" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/kufi_regular"
                       android:layout_gravity="center"
                       android:textColor="@color/design_default_color_error"
                       android:layout_marginStart="@dimen/space_10"
                       android:text="@string/give_your_rating"
                       android:onClick="@{(view) -> fragment.onRateClick(view)}"
                       android:textSize="14sp"
                       />

                   <RatingBar
                       android:id="@+id/rating"
                       style="?android:attr/ratingBarStyleSmall"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_marginTop="@dimen/space_10"
                       android:layout_marginStart="@dimen/space_5"
                       android:layout_marginBottom="@dimen/space_10"
                       android:isIndicator="false"
                       android:numStars="5"
                       android:progressTint="@color/rate_color"
                       android:stepSize="1" />




               </LinearLayout>



           </LinearLayout>
       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginTop="@dimen/space_5"
           android:foreground="?android:attr/selectableItemBackground"
           card_view:cardBackgroundColor="@color/white"
           card_view:cardElevation="2dp"
           card_view:cardUseCompatPadding="true">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/space_30"
               android:layout_marginStart="@dimen/space_20"
               android:layout_marginEnd="@dimen/space_20"
               android:orientation="horizontal">



               <ImageView
                   android:layout_width="@dimen/space_50"
                   android:layout_height="@dimen/space_50"
                   android:src="@drawable/call"
                   android:layout_weight="1"
                   card_view:tint="@color/baseColor" />




               <ImageView
                   android:layout_width="@dimen/space_50"
                   android:layout_height="@dimen/space_50"
                   android:src="@drawable/whats"
                   android:layout_weight="1"

                   card_view:tint="@color/baseColor" />

               <ImageView
                   android:layout_width="@dimen/space_50"
                   android:layout_height="@dimen/space_50"
                   android:src="@drawable/call"

                   android:layout_weight="1"
                   card_view:tint="@color/baseColor" />




           </LinearLayout>
       </androidx.cardview.widget.CardView>
   </LinearLayout>

    </LinearLayout>

</layout>