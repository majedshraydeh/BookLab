<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >

    <data>

        <variable
            name="presenter"
            type="com.fikrabd.mehna_w_amal.register.fragments.individuals.IndividualsPresenter" />

        <variable
            name="fragment"
            type="com.fikrabd.mehna_w_amal.register.fragments.individuals.IndividualFragment" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:elevation="0dp">

<!--            <androidx.appcompat.widget.Toolbar-->
<!--                android:id="@+id/login_toolbar"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                app:itemIconTint="@color/baseColor"-->
<!--                android:theme="@style/MyToolBar1"-->
<!--                >-->

<!--                <TextView-->
<!--                    android:id="@+id/toolbar_title"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="@string/register_your_details"-->
<!--                    android:textSize="16sp"-->
<!--                    android:textColor="@color/baseColor"-->
<!--                    android:fontFamily="@font/kufi_bold"-->
<!--                    android:layout_gravity="center" />-->

<!--            </androidx.appcompat.widget.Toolbar>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/space_10"
                android:paddingLeft="@dimen/spacing_xxlarge"
                android:paddingTop="@dimen/space_10"
                android:paddingRight="@dimen/spacing_xxlarge"
                android:paddingBottom="@dimen/spacing_middle">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingTop="8dp">

                        <View
                            android:id="@+id/line_first"
                            android:layout_width="0dp"
                            android:layout_height="3dp"

                            android:layout_weight="1"
                            android:background="@color/Red" />

                        <View
                            android:id="@+id/line_second"
                            android:layout_width="0dp"
                            android:layout_height="3dp"

                            android:layout_weight="1"
                            android:background="@color/Red" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true">

                        <ImageView
                            android:id="@+id/image_first"
                            android:layout_width="@dimen/spacing_smlarge"
                            android:layout_height="@dimen/spacing_smlarge"
                            android:layout_marginStart="@dimen/space_100"
                            android:layout_centerHorizontal="true"
                            android:background="@android:color/white"
                            android:src="@drawable/shape_round_outline_primary" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:id="@+id/image_second"
                            android:layout_width="@dimen/spacing_smlarge"
                            android:layout_height="@dimen/spacing_smlarge"
                            android:layout_marginStart="@dimen/space_40"
                            android:layout_centerHorizontal="true"
                            android:background="@android:color/white"
                            app:srcCompat="@drawable/shape_round_outline_primary" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true">

                        <ImageView
                            android:id="@+id/image_third"
                            android:layout_width="@dimen/spacing_smlarge"
                            android:layout_height="@dimen/spacing_smlarge"
                            android:layout_marginEnd="@dimen/space_100"
                            android:layout_centerHorizontal="true"
                            android:background="@android:color/white"
                            app:srcCompat="@drawable/shape_round_outline_primary" />


                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <FrameLayout
                android:id="@+id/frame_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >


                <include
                    android:id="@+id/first"
                    layout="@layout/layout_first"
                    android:visibility="gone"/>

                <include
                    android:id="@+id/second"
                    layout="@layout/layout_second"
                    android:visibility="gone"/>

                <include
                    android:id="@+id/third"
                    layout="@layout/layout_third"
                    android:visibility="gone"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/lyt_previous"
                    style="@style/RippleStyleWhite"
                    android:layout_width="@dimen/spacing_xxlarge"
                    android:layout_height="@dimen/spacing_xxlarge"
                    android:background="@color/grey_10"
                    android:onClick="@{(view) -> fragment.previous(view)}">

                    <ImageView
                        android:layout_width="@dimen/spacing_smlarge"
                        android:layout_height="@dimen/spacing_smlarge"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_back"
                        app:tint="@color/black" />

                </com.balysv.materialripple.MaterialRippleLayout>

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/lyt_next"
                    style="@style/RippleStyleWhite"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/spacing_xxlarge"
                    android:layout_weight="1"
                    android:background="@color/baseColor"
                    android:onClick="@{(view) -> fragment.next(view)}">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/next_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/next"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                            android:textColor="@android:color/white" />

                        <ImageView
                            android:id="@+id/next"
                            android:layout_width="@dimen/spacing_smlarge"
                            android:layout_height="@dimen/spacing_smlarge"
                            android:layout_marginStart="@dimen/spacing_medium"
                            android:layout_marginLeft="@dimen/spacing_medium"
                            android:background="@drawable/ic_next" />

                    </LinearLayout>

                </com.balysv.materialripple.MaterialRippleLayout>

            </LinearLayout>

        </LinearLayout>


        <FrameLayout
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:layout_behavior="@string/bottom_sheet_behavior" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>