<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cart_dialog_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/baseColor"
    android:orientation="vertical">



    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="150dp"
            android:orientation="vertical"
           >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_20"
                android:orientation="vertical">


            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_5"
                android:fontFamily="@font/kufi_bold"
                android:gravity="center"
                android:text="@string/add_file"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/white"
                android:textSize="24sp" />
            <EditText
                android:id="@+id/subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape_white"
                android:drawableStart="@drawable/ic_subject"
                android:drawablePadding="@dimen/space_10"
                android:fontFamily="@font/kufi_regular"
                android:hint="@string/subject"
                android:inputType="text"
                android:layout_marginTop="@dimen/space_15"
                android:padding="@dimen/space_10"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/course_teacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:background="@drawable/button_shape_white"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="@dimen/space_10"
                android:padding="@dimen/space_10"
                android:fontFamily="@font/kufi_regular"
                android:hint="@string/teacher"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:background="@drawable/button_shape_white"
                android:drawableStart="@drawable/ic_edit"
                android:drawablePadding="@dimen/space_10"
                android:padding="@dimen/space_10"
                android:fontFamily="@font/kufi_regular"
                android:hint="@string/file_name"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_20"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/space_10"
                    android:layout_weight="1"
                    android:background="@drawable/btn_login"
                    android:fontFamily="@font/kufi_bold"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/baseColor"
                    android:textSize="18sp"
                    app:backgroundTint="@color/white"
                    tools:targetApi="lollipop" />

                <Button
                    android:id="@+id/upload"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/space_10"
                    android:layout_weight="1"
                    android:background="@drawable/btn_login"
                    android:fontFamily="@font/kufi_bold"
                    android:text="@string/upload"
                    android:textAllCaps="false"
                    android:textColor="@color/baseColor"
                    android:textSize="18sp"
                    app:backgroundTint="@color/white"
                    tools:targetApi="lollipop" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>