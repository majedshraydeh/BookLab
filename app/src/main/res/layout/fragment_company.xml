<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="presenter"
            type="com.fikrabd.mehna_w_amal.register.fragments.company.CompanyPresenter" />

        <variable
            name="fragment"
            type="com.fikrabd.mehna_w_amal.register.fragments.company.CompanyFragment" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <FrameLayout
                android:id="@+id/frame_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/space_30"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_10"
                            android:fontFamily="@font/kufi_bold"
                            android:padding="@dimen/space_5"
                            android:text="@string/company_registration"
                            android:textColor="@color/black"
                            android:textSize="18sp" />


                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_10"
                            android:layout_gravity="center">

                            <com.mikhaellopez.circularimageview.CircularImageView
                                android:id="@+id/image_profile_company"
                                android:layout_width="@dimen/space_100"
                                android:layout_height="@dimen/space_100"
                                android:tag="@string/not_selected"
                                app:civ_border_width="1dp"
                                app:civ_border_color="@color/grey_5"
                                app:civ_border="true"
                                android:src="@drawable/com_facebook_profile_picture_blank_square" />

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|bottom">

                                <com.mikhaellopez.circularimageview.CircularImageView
                                    android:layout_width="@dimen/space_40"
                                    android:layout_height="@dimen/space_40"
                                    android:layout_gravity="bottom|end"
                                    android:src="@drawable/ic_add"
                                    android:id="@+id/add_image_company"
                                    />
                            </FrameLayout>

                        </FrameLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fillViewport="true"
                            android:layout_marginTop="@dimen/space_10"
                            android:orientation="vertical"
                            tools:context=".login.LoginActivity">


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/name_company_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/space_5"
                                android:layout_marginEnd="@dimen/space_5"
                                android:layout_marginTop="@dimen/space_10"
                                app:errorEnabled="true"
                                app:startIconDrawable="@drawable/ic_company">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/name_company"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/kufi_regular"
                                    android:hint="@string/company_name"
                                    android:inputType="text"
                                    android:lines="1"
                                    android:textSize="@dimen/space_15" />

                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/commercial_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/space_5"
                                android:layout_marginEnd="@dimen/space_5"
                                android:visibility="visible"
                                app:errorEnabled="true"
                                app:startIconDrawable="@drawable/ic_edit">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/commercial"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/kufi_regular"
                                    android:hint="@string/commercial_registration_no"
                                    android:inputType="number"
                                    android:lines="1"
                                    android:textSize="@dimen/space_15" />

                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/commercial_activities_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/space_5"
                                android:layout_marginEnd="@dimen/space_5"
                                android:visibility="visible"
                                app:errorEnabled="true"
                                app:startIconDrawable="@drawable/ic_edit">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/commercial_activities"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/kufi_regular"
                                    android:hint="@string/commercial_activities"
                                    android:inputType="text"
                                    android:lines="1"
                                    android:textSize="@dimen/space_15" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/email_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/space_5"
                                android:layout_marginEnd="@dimen/space_5"
                                android:visibility="visible"
                                app:errorEnabled="true"
                                app:startIconDrawable="@drawable/ic_email">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/email"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/kufi_regular"
                                    android:hint="@string/e_mail"
                                    android:inputType="textEmailAddress"
                                    android:lines="1"
                                    android:textSize="@dimen/space_15" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/password_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/space_5"
                                android:layout_marginEnd="@dimen/space_5"
                                app:errorEnabled="true"
                                app:startIconDrawable="@drawable/ic_lock">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/password"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/kufi_regular"
                                    android:hint="@string/password"
                                    android:inputType="textPassword"
                                    android:lines="1"
                                    android:textSize="@dimen/space_15" />

                            </com.google.android.material.textfield.TextInputLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/space_10"
                                android:fontFamily="@font/kufi_bold"
                                android:padding="@dimen/space_5"
                                android:text="@string/phone_number"
                                android:textColor="@color/grey_60"
                                android:textSize="12sp" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/mobile_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/space_5"
                                android:layout_marginEnd="@dimen/space_5"
                                android:visibility="visible"
                                app:errorEnabled="true"
                                app:startIconDrawable="@drawable/ic_mobile">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/mobile"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/kufi_regular"
                                    android:hint="@string/cell_phone"
                                    android:inputType="number"
                                    android:lines="1"
                                    android:textSize="@dimen/space_15" />

                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/fixed_phone_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/space_5"
                                android:layout_marginEnd="@dimen/space_5"
                                android:visibility="visible"
                                app:errorEnabled="true"
                                app:startIconDrawable="@drawable/old_mopile">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/fixed_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/kufi_regular"
                                    android:hint="@string/fixed_phone"
                                    android:inputType="number"
                                    android:lines="1"
                                    android:textSize="@dimen/space_15" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/country_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/space_5"
                                android:layout_marginEnd="@dimen/space_5"
                                android:visibility="visible"
                                app:errorEnabled="true"
                                app:startIconDrawable="@drawable/country">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/country"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:cursorVisible="false"
                                    android:focusable="false"
                                    android:fontFamily="@font/kufi_regular"
                                    android:hint="@string/country"
                                    android:inputType="none"
                                    android:lines="1"
                                    android:textIsSelectable="true"
                                    android:textSize="@dimen/space_15" />

                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/state_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/space_5"
                                android:layout_marginEnd="@dimen/space_5"
                                android:visibility="visible"
                                app:errorEnabled="true"
                                app:startIconDrawable="@drawable/goverment">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/state"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:cursorVisible="false"
                                    android:focusable="false"
                                    android:fontFamily="@font/kufi_regular"
                                    android:hint="@string/governorate"
                                    android:inputType="none"
                                    android:lines="1"
                                    android:textIsSelectable="true"
                                    android:textSize="@dimen/space_15" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/city_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/space_5"
                                android:layout_marginEnd="@dimen/space_5"
                                android:visibility="visible"
                                app:errorEnabled="true"
                                app:startIconDrawable="@drawable/city">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/city"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/kufi_regular"
                                    android:hint="@string/city"
                                    android:inputType="none"
                                    android:lines="1"
                                    android:textIsSelectable="true"
                                    android:textSize="@dimen/space_15" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/website_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/space_5"
                                android:layout_marginEnd="@dimen/space_5"
                                android:visibility="visible"
                                app:errorEnabled="true"
                                app:startIconDrawable="@drawable/ic_language">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/website"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/kufi_regular"
                                    android:hint="@string/website"
                                    android:inputType="text"
                                    android:lines="1"
                                    android:textSize="@dimen/space_15" />

                            </com.google.android.material.textfield.TextInputLayout>






                        </LinearLayout>

                    </LinearLayout>

                </ScrollView>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/lyt_next_x"
                    style="@style/RippleStyleWhite"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/spacing_xxlarge"
                    android:layout_weight="1"
                    android:onClick="@{(view) -> fragment.next(view)}"
                    android:background="@color/baseColor">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/next_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/select_your_profession"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                            android:textColor="@android:color/white" />


                    </LinearLayout>

                </com.balysv.materialripple.MaterialRippleLayout>

            </LinearLayout>

        </LinearLayout>


        <FrameLayout
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:layout_behavior="@string/bottom_sheet_behavior" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>