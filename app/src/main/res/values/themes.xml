<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mehna" parent="Theme.AppCompat.Light.NoActionBar"
        >
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/baseColor</item>
        <item name="colorPrimaryVariant">@color/baseColor</item>
        <item name="colorOnPrimary">@color/baseColor</item>

        <item name="colorSecondary">@color/baseColor</item>
        <item name="colorSecondaryVariant">@color/grey_5</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="cc_tv_background_color">@color/baseColor</item>
        <item name="cc_is_animate_layout">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/kufi_regular</item>
    </style>

    <style name="RobotoTextViewStyleToolbar" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/kufi_bold</item>

    </style>
    <style name="MyToolBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">#ffffff</item>
        <item name="android:itemBackground">#ffffff</item>


    </style>

    <style name="MyToolBar1" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/baseColor</item>
        <item name="android:itemBackground">@color/baseColor</item>
        <item name="colorControlNormal">@color/baseColor</item>
        <item name="android:layout_gravity">center_horizontal|center</item>
        <item name="md_title_gravity">center</item>
    </style>
<!--    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">-->
<!--        &lt;!&ndash; Customize color of navigation drawer icon and back arrow &ndash;&gt;-->
<!--        <item name="colorControlNormal">@color/thirdBaseColor</item>-->
<!--    </style>-->

    <style name="RippleStyleBlack" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#8096989A</item>
    </style>

    <style name="progress" parent="android:Widget.ProgressBar">
        <item name="indicatorColor">@color/baseColor</item>
    </style>
    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="NoPrimaryDark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimaryDark">@color/transparent</item>
    </style>

    <style name="StyleMenuItem">
        <item name="fontFamily">@font/kufi_bold</item>
    </style>

    <style name="Toolbar.Light" parent="@style/Theme.Mehna">
        <item name="colorControlNormal">@color/grey_60</item>
        <item name="android:textColorPrimary">@color/grey_60</item>
    </style>

</resources>